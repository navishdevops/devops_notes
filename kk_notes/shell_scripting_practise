#!/bin/bash
# Demonstration of Shell Special Variables

echo "--------------------------------------------"
echo "üîπ Script Name                : $0"
echo "--------------------------------------------"
echo "üîπ Current Process ID (PID)   : $$"
echo "üîπ Parent Process ID (PPID)   : $PPID"
echo "--------------------------------------------"
echo "üîπ Total Arguments (#)        : $#"
echo "üîπ All Arguments (\$@)         : $@"
echo "üîπ All Arguments (\$*)         : $*"
echo "--------------------------------------------"
echo "üîπ 1st Argument               : $1"
echo "üîπ 2nd Argument               : $2"
echo "üîπ 3rd Argument               : $3"
echo "--------------------------------------------"

# Background process example
sleep 5 &
echo "üîπ Last Background PID (\$!)   : $!"
echo "--------------------------------------------"

# Exit status example
ls /tmp >/dev/null
echo "üîπ Exit Status of last cmd (\$?) : $?"

# Some additional special variables
echo "--------------------------------------------"
echo "üîπ Random Number (\$RANDOM)       : $RANDOM"
echo "üîπ Current Line Number (\$LINENO) : $LINENO"
echo "üîπ Seconds since shell started    : $SECONDS"
echo "--------------------------------------------"

echo "Script executed successfully!"
