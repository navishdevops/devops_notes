#!/bin/bash

read -p "Enter username: " user
read -sp "Enter password: " pass
echo
read -t 10 -p "Enter city (within 10s): " city
city=${city:-Unknown}

echo "User: $user"
echo "Password: (hidden)"
echo "City: $city"




